

<head><link rel="stylesheet" type="text/css" href="https://s3.amazonaws.com/extrara-assets/css/login.css">
</head>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1044750408868928',
      xfbml      : true,
      version    : 'v2.4'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
<p class="form-title">Sign Up</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html=> {multipart: true}) do |f| %>
  <%= devise_error_messages! %>
</br>
  <div class="field">
    <%= f.text_field :firstname, autofocus: true, placeholder: " first name" %>
  </div></br>
  <div class="field">
    <%= f.text_field :lastname, autofocus: true, placeholder: " last name" %>
  </div></br>
<div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: " email" %>
  </div>

  <div class="field"></br>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: " password" %>
  </div></br>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: " confirm password" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>


