<!DOCTYPE html>
<html>
<head>
  <title>Expggo</title>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <% if controller_name == "static"%>
     <%= stylesheet_link_tag 'bootstrap.min'%>
     <%= stylesheet_link_tag 'grayscale'%>
     <%= stylesheet_link_tag 'font-awesome.min'%>
     <%= javascript_include_tag "welcome" %>
     <%= javascript_include_tag "common" %>
     <%= javascript_include_tag "grayscale" %>
	 <%= javascript_include_tag "main" %>
	 <%= javascript_include_tag "stats" %>
	 <%= javascript_include_tag "util" %>
	

  <% end %>
  <% if controller_name!="static"%> 
 	 <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
 	 <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
 	 <%= csrf_meta_tags %>
<%end%>
  <% if controller_name == "static" && action_name == "index" %>
     <%= stylesheet_link_tag "staticindex" %>
     <%= stylesheet_link_tag "staticindex2" %>
     <%= javascript_include_tag "welcome" %>
     <%= javascript_include_tag "common" %>
     <%= javascript_include_tag "grayscale" %>
	 <%= javascript_include_tag "main" %>
	 <%= javascript_include_tag "stats" %>
	 <%= javascript_include_tag "util" %>

  <% end %>
</head>
<body>

<%= yield %>

</body>
</html>
